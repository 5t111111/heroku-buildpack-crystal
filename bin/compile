#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

# Install Crystal
wget -q https://github.com/manastech/crystal/releases/download/0.5.3/crystal-0.5.3-1-linux-x86_64.tar.gz
tar xfz crystal-0.5.3-1-linux-x86_64.tar.gz -C /tmp

cd $BUILD_DIR
/tmp/crystal-0.5.3-1/bin/crystal deps
/tmp/crystal-0.5.3-1/bin/crystal build src/main.cr --release
